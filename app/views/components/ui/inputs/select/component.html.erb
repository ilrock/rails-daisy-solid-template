<div class="<%= wrapper_classes %>">
  <% if label %>
    <label class="label">
      <%= form_builder.label label, class: "label-text" %>
      <%= top_right_label %>
    </label>
  <% end %>

  <%= form_builder.select name, options, { selected: selected, include_blank: include_blank }, class: field_classes, **attributes %>

  <% if errors %>
    <div class="label-text text-error"><%= errors %></div>
  <% elsif hint %>
    <label class="label">
      <div class="label-text"><%= hint %></div>
    </label>
  <% end %>
</div>
