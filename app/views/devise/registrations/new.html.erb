<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= component "ui/card", title: "Sign up" do |card| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.daisy_email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.daisy_password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <p class="text-sm text-gray-600 mt-1">(<%= @minimum_password_length %> characters minimum)</p>
      <% end %>
    </div>

    <div class="field">
      <%= f.daisy_password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <% card.with_actions do %>
      <%= f.daisy_submit "Sign up" %>
    <% end %>
  <% end %>
<% end %>

<div class="flex flex-col justify-center items-center mt-4">
  <%= render "devise/shared/links" %>
</div>
